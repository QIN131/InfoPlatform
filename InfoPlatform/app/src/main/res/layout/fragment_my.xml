<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <com.infoplatform.util.PersonalItemView
            android:id="@+id/item_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:icon="@drawable/yonghu"
            app:name="账号"
            android:background="#fff"
            app:show_more="true"
            app:show_line="true"/>

        <com.infoplatform.util.PersonalItemView
            android:id="@+id/item_truename"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:icon="@drawable/yonghu"
            app:name="姓名"
            android:background="#fff"
            app:show_more="true"
            app:show_line="true"/>

        <com.infoplatform.util.PersonalItemView
            android:id="@+id/item_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:icon="@drawable/phone"
            app:name="手机"
            android:background="#fff"
            app:show_more="true"
            app:show_line="true"/>

        <com.infoplatform.util.PersonalItemView
            android:id="@+id/item_sex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:icon="@drawable/sex"
            app:name="性别"
            android:background="#fff"
            app:show_more="true"
            app:show_line="true"/>

        <com.infoplatform.util.PersonalItemView
            android:id="@+id/item_birth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:icon="@drawable/birth"
            app:name="生日"
            android:background="#fff"
            app:show_more="true"
            app:show_line="true"/>

        <com.infoplatform.util.PersonalItemView
            android:id="@+id/item_editpwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:icon="@drawable/editpwd"
            app:name="修改密码"
            android:background="#fff"
            app:show_more="true"
            app:show_line="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <Button
                android:id="@+id/logout"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="退出系统"
                android:textColor="#ffffff"
                android:background="#62A507"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>